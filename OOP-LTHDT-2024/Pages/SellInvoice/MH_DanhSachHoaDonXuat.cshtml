@page
@model OOP_LTHDT_2024.Pages.SellInvoice.MH_DanhSachHoaDonXuatModel
@{
	ViewData["Title"] = "Quản lí hoá đơn xuất";

}

<div>
	<form method="post">
		<h5>Hổ trợ tìm kiếm theo ngày</h5>
		<label for="fromDate">Từ ngày:</label>
		<input type="date" id="fromDate" name="fromDate" /> <br />
		<label for="toDate">Đến ngày:</label>
		<input type="date" id="toDate" name="toDate"/>
		<input class="btn-self" type="submit" value="Tìm kiếm" />
	</form>
</div>
<div>
	<a href="MH_ThemHoaDonXuat">Thêm hóa đơn mới</a>
</div>
<div class="table-content">
	<table>
		<tr>
			<th>Mã hoá đơn</th>
			<th>Tên khách hàng</th>
			<th>Số điện thoại</th>
			<th>Ngày tạo hóa đơn</th>
			<th>Địa chỉ</th>
			<th>Thành tiền</th>
			<th>Trạng thái</th>
			<th class="action">Hành động</th>
		</tr>
		@foreach (var hoaDon in Model.DanhSachHoaDon)
		{
			<tr>
				<td>@hoaDon.Ma</td>
				<td>@hoaDon.Ten</td>
				<td>@hoaDon.SDT</td>
				<td>@hoaDon.NgayTaoHD</td>
				<td>@hoaDon.DiaChi</td>
				<td>@hoaDon.ThanhTien</td>
				<td>@{
						string TinhTrang = "Chưa xuất kho";
						if(hoaDon.XacNhan)
						{
							TinhTrang = "Hoàn tất";
						}
						@TinhTrang
					}
				</td>
				<td class="action">
					@if (!hoaDon.XacNhan)
					{
						<a href="MH_SuaHoaDonXuat?ma=@hoaDon.Ma">Sửa</a>
						<a href="MH_XoaHoaDonXuat?ma=@hoaDon.Ma">Xoá</a>
					}
						<a href="MH_ChiTietHoaDon?ma=@hoaDon.Ma">Xem chi tiết</a>


				</td>
			</tr>
		}
	</table>

</div>
