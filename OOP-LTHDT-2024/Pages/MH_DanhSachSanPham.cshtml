@page
@model OOP_LTHDT_2024.Pages.MH_DanhSachSanPhamModel
@{
}

<div>
	<form method="post">
		<label for="search-bar">Tìm kiếm sản phẩm</label>
		<input type="text" id="search-bar" name="keyword" class="search" placeholder="Tìm kiếm" />
		<input class="btn-self" type="submit"/>
	</form>
</div>

<div class="table-content">
	<table>
		<tr>
			<td>Mã sản phẩm</td>
			<td>Tên</td>
			<td>Giá</td>
			<td class="action">Hành động</td>
		</tr>
		@foreach (var sanPham in Model.DanhSachSanPham)
		{
			<tr>
				<td>@sanPham.MaSP</td>
				<td>@sanPham.Ten</td>
				<td>@sanPham.Gia</td>
				<td class="action">
					<a href="MH_Sua_SanPham?masp=@sanPham.MaSP">Sửa</a>
					<a href="MH_Xoa_SanPham?masp=@sanPham.MaSP">Xoá</a>
				</td>
			</tr>
		}
	</table>

</div>
